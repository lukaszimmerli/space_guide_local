# Image Quality Configuration
# Image quality for compressed images (1-100, where 100 is best quality)
# Lower values = smaller file size, faster uploads, lower quality
# Higher values = larger file size, slower uploads, better quality
# Recommended: 70 for balanced performance, 85 for better quality, 50 for faster uploads
IMAGE_QUALITY=70

# Maximum image dimensions (in pixels)
# Images larger than these dimensions will be resized
# Set to 0 to disable resizing
# Setting this to equal sizes so portrait and landscape images are handled uniformly
MAX_IMAGE_WIDTH=1440
MAX_IMAGE_HEIGHT=1440

# Video Quality Configuration
# Video quality for compressed videos (low, medium, high, default)
# Low = smaller file size, faster uploads, lower quality
# Medium = balanced performance and quality
# High = larger file size, slower uploads, better quality
# Default = uses device default (usually high quality)
VIDEO_QUALITY=medium

# Maximum video dimensions (in pixels)
# Videos larger than these dimensions will be resized
# Set to 0 to disable resizing
MAX_VIDEO_WIDTH=1280
MAX_VIDEO_HEIGHT=720

# Maximum video duration (in seconds)
# Videos longer than this will be trimmed
# Set to 0 to disable duration limit (not recommended)
MAX_VIDEO_DURATION=120